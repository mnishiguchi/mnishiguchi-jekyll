{
  "name": "mnishiguchi-jekyll",
  "private": true,
  "scripts": {
    "webpack": "webpack",
    "develop": "(run-s develop:before) && run-p develop:{webpack,jekyll}",
    "develop:before": "run-s clean copy_vendor_assets",
    "develop:jekyll": "sleep 5 && bundle exec jekyll serve --watch",
    "develop:webpack": "webpack --mode development --watch",
    "build": "run-s build:before build:webpack build:jekyll purgecss",
    "build:before": "run-s clean copy_vendor_images",
    "build:jekyll": "JEKYLL_ENV=production bundle exec jekyll build",
    "build:webpack": "webpack --mode production",
    "clean": "bin/clean",
    "purgecss": "bin/purgecss",
    "copy_vendor_assets": "bin/vendor_assets copy_svgs",
    "format": "prettier --write \"**/*.{js,jsx,json}\""
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@fortawesome/fontawesome-free": "^5.13.0",
    "babel-loader": "^8.1.0",
    "bootstrap": "^4.4.1",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "fs-extra": "^9.0.0",
    "list.js": "^1.5.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "purgecss": "^2.2.1",
    "sass-loader": "^8.0.2",
    "simple-icons": "^2.11.0",
    "stimulus": "^1.1.1",
    "style-loader": "^1.2.1",
    "turbolinks": "^5.2.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "workbox-webpack-plugin": "^5.1.3"
  }
}
