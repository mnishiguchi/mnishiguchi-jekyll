{
  "name": "mnishiguchi-jekyll",
  "private": true,
  "scripts": {
    "webpack": "webpack",
    "develop": "yarn develop:setup && run-p develop:{webpack,jekyll}",
    "develop:setup": "run-s clean copy_vendor_assets && webpack --mode development",
    "develop:jekyll": "bundle exec jekyll serve --watch",
    "develop:webpack": "webpack --mode development --watch",
    "build": "run-s build:setup build:webpack build:jekyll purgecss",
    "build:setup": "run-s clean copy_vendor_assets",
    "build:jekyll": "JEKYLL_ENV=production bundle exec jekyll build",
    "build:webpack": "webpack --mode production",
    "clean": "bundle exec bin/clean",
    "purgecss": "bundle exec bin/purgecss",
    "copy_vendor_assets": "bundle exec bin/copy_vendor_assets",
    "format": "prettier --write \"**/*.{js,jsx,json}\""
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@stimulus/webpack-helpers": "^2.0.0",
    "babel-loader": "^8.3.0",
    "bootstrap": "^4.5.0",
    "css-loader": "^6.7.3",
    "cssnano": "^4.1.10",
    "list.js": "^1.5.0",
    "mini-css-extract-plugin": "^2.7.2",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^7.0.2",
    "prettier": "^2.0.5",
    "purgecss": "^2.2.1",
    "sass-loader": "^13.2.0",
    "simple-icons": "^2.12.0",
    "stimulus": "^2.0.0",
    "style-loader": "^1.2.1",
    "turbolinks": "^5.2.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "workbox-webpack-plugin": "^5.1.3"
  }
}
